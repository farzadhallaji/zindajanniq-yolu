<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd1"
    android:layout_gravity=""
    tools:context="azad.hallaji.farzad.com.masirezendegi.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/loadprogs"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/loadprogress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Loading"
            android:id="@+id/idLoadingTextview"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#186fc6"/>




    </RelativeLayout>

</LinearLayout>
