<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight=".75">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="3dp"
                    android:id="@+id/dataTextRezerv"
                    android:textSize="15dp"
                    android:textColor="#0071f2"
                    android:layout_height="wrap_content"
                    android:text=" تاریخ :"/>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/timeTextRezerv"
                    android:textColor="#0071f2"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text=" ساعت :"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text=" تاریخ :"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textSize="15dp"
                    android:text=" ساعت :"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#0071f2"
                    android:textSize="15dp"
                    android:gravity="center|right"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/NameMarkazRezervTextView"
                    android:text="تندرستی"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#e78f02"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="نام مرکز : "/>

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:id="@+id/hayayooooo"
                android:src="@drawable/noentry"
                app:civ_border_color="#a54"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>