<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/item_icon"
            android:src="@drawable/asadicon"
            android:layout_weight="3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="asasadfddggdf"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:textColor="#e78f02"
                android:textSize="20dp"
                android:id="@+id/AdviserName"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="adlmsljnsldkmlsdknlsjkdnlskdnl"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:id="@+id/Tag"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="کد کارشناس :12311  1321323 "
                android:layout_margin="4dp"
                android:padding="3dp"
                android:layout_gravity="right"
                android:id="@+id/IDCommentCount"
                android:gravity="right"/>




        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:id="@+id/user_img"
            android:src="@drawable/user_image"
            app:civ_border_color="#a54"
            android:layout_weight="3"/>
    </LinearLayout>

</LinearLayout>