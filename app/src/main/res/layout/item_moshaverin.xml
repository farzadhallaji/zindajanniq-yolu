<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="asasadfddggdf"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:textColor="#e78f02"
                android:textSize="20dp"
                android:id="@+id/AdviserName"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:id="@+id/Tag"
                android:gravity="right"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layoutDirection="ltr"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/item_icon"
                    android:src="@drawable/yahligade"
                    android:layout_weight="8.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_margin="5dp"
                    android:id="@+id/commentinnazrioml"
                    android:layout_weight="6"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/arkan"
                    android:src="@drawable/furuhe"
                    android:layout_weight="8.5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/IDCommentCount"
                    android:layout_weight="6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="کد کارشناس: "
                    android:layout_gravity="right"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/user_img"
            app:civ_border_width="3dp"
            app:civ_border_color="#3d51a9"
            android:layout_weight="4"/>
    </LinearLayout>

</LinearLayout>