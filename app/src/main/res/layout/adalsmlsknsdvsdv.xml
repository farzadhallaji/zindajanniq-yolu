<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mohaverinpage"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_margin="5dp"
                android:id="@+id/virayeshTextinToolbar"
                android:text="ویرایش"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:id="@+id/zaxireTextinToolbar"
                android:text="ذخیره "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:id="@+id/menuButton"
                    android:layout_centerInParent="true"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_menu_white"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:id="@+id/imageviewuserVirayesh"
                    android:layout_centerInParent="true"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="89dp"
                    android:layout_height="89dp"
                    android:background="@drawable/border"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pluse"
                    android:id="@+id/onclickeasadinchimastanxanim"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:hint="نام و نام خانوادگی"
                        android:gravity="center"
                        android:id="@+id/namexanivadeEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="شماره تلفن"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/shomareteleEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="ایمیل"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/emailEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:gravity="center"
                        android:id="@+id/sihhhhh1"
                        android:layout_height="match_parent"
                        android:text="اگر تعداد برچسب ها بیشتر شد ، با ویرگول آن ها را از هم جدا
                         کنید"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="برچسب"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/barchasbEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="هزینه مشاوره در هر دقیقه ریال"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/costperminEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="بیشترین زمان مشاوره برای یک مراجع"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/maxtimeEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="جنسیت"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/sexEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint="زبان مشاوره"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/dialtecEdit"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_margin="7dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_margin="12dp"
                        android:id="@+id/sihhhhh2"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="اگر تعداد زبان ها از یک مورد بیشتر شد با ویرگول آن ها را از هم جدا کنید"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_margin="7dp"
                    android:padding="5dp"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:background="#c9c9c9"
                        android:textColor="#000"
                        android:hint="درباره ی خود... "
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="60dp"
                        android:gravity="center_horizontal|right"
                        android:layout_height="match_parent"
                        android:id="@+id/aboutmeEdit"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>